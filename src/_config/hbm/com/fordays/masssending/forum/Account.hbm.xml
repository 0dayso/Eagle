<?xml version="1.0" encoding="UTF-8"?>
<!-- [syncWithModel=true] -->
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
	
<hibernate-mapping >

<class 
  name="com.fordays.masssending.forum.Account"
	table="account"
>

<meta attribute="extends">org.apache.struts.action.ActionForm implements Cloneable</meta>
<meta attribute="class-code"><![CDATA[
  public Object clone()
  {
    Object o = null;
    try
    {
      o = super.clone();
    }
    catch (CloneNotSupportedException e)
    {
      e.printStackTrace();
    }
    return o;
}

private String thisAction="";
 public String getThisAction()
 {
     return thisAction;
 }


public void setThisAction(String thisAction)
 {
     this.thisAction=thisAction;
 }

private int index=0;
 public int getIndex()
 {
     return index;
 }


public void setIndex(int index)
 {
     this.index=index;
 }
 




]]></meta>


    <id
        name="id"
        type="long"
        column="id"
    >
        <generator class="sequence" >
          <param  name="sequence">seq_account</param>
          </generator>
    </id>

    <property
        name="loginName"
        column="login_name"
        type="string"
        not-null="false"
        insert="true" update="true"
    >
	</property>
    <property
        name="loginPassword"
        column="login_password"
        type="string"
        not-null="false"
        insert="true" update="true"
    >
	</property>
    <property
        name="status"
        column="status"
        type="java.lang.Long"
        not-null="false"
        insert="true" update="true"
    >
	</property>

    <many-to-one
        name="forum"
        class="com.fordays.masssending.forum.Forum"
        not-null="false"
    >

        <column name="forum_id" />
    </many-to-one>
  	<set
      name="assignMessages"
      inverse="true"
  	  cascade="all-delete-orphan"
      >
          <key>
  		        <column name="account_id" />
          </key>
          <one-to-many 
              class="com.fordays.masssending.message.AssignMessage"
          />
    </set>
</class>

</hibernate-mapping>